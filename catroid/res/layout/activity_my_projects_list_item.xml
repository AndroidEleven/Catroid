<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:id="@+id/my_projects_activity_linear_layout"
              android:minHeight="@dimen/my_projects_list_item_height" >

    <CheckBox
        android:id="@+id/project_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/my_projects_activity_item_background"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingTop="9dp"
        android:background="@drawable/button_background_selector" >

        <ImageView
            android:id="@+id/my_projects_activity_project_image"
            android:layout_width="72dp"
            android:layout_height="65dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/my_projects_activity_list_item_thumbnail_border"
            android:cropToPadding="true"
            android:padding="1.5dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/my_projects_activity_project_title"
            style="@style/ListViewItemTitleText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="17dp"
            android:layout_toRightOf="@+id/my_projects_activity_project_image"
            android:layout_toEndOf="@+id/my_projects_activity_project_image" />

        <include layout="@layout/activity_my_projects_title_details_view" />

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:id="@+id/btn_detail_close"
            android:src="@drawable/ic_up"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:visibility="invisible"
            android:padding="15dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

        <ImageButton
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:id="@+id/btn_detail_open"
            android:src="@drawable/ic_down"
            android:background="@color/transparent"
            android:padding="15dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout >

</LinearLayout >